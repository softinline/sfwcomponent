{
    "type":"screen",
    "layout":"sfwcomponent::backoffice.layouts.default",
    "ajax":false,
    "name":"add",
    "url":"sfw/email-templates",
    "components":[
        {
            "type":"function",
            "function":"breadcrumbAdd"
        },
        {
            "type":"div",
            "class":"row",
            "components":[                
                {
                    "type":"div",
                    "class":"col-lg-12",
                    "components":[
                        {                                                                    
                            "type":"form",
                            "class":"",
                            "id":"frm-sfw-email-templates-add",
                            "action":"sfw/email-templates/create",
                            "components":[
                                {
                                    "type":"tabs",
                                    "components":[
                                        {
                                            "type":"tab",
                                            "title":"general",
                                            "key":"general",
                                            "components":[
                                                {
                                                    "type":"div",
                                                    "class":"card",
                                                    "components":[
                                                        {
                                                            "type":"div",
                                                            "class":"card-body",
                                                            "components":[
                                                                {
                                                                    "type":"text",
                                                                    "required":true,
                                                                    "title":"email_template",
                                                                    "field":"email_template"                                                                    
                                                                },
                                                                {
                                                                    "type":"text",
                                                                    "required":true,
                                                                    "title":"key",
                                                                    "field":"key"
                                                                },
                                                                {
                                                                    "type":"text",
                                                                    "required":true,
                                                                    "title":"subject",
                                                                    "field":"subject"
                                                                },
                                                                {
                                                                    "type":"ckeditor",
                                                                    "required":true,
                                                                    "title":"body",
                                                                    "field":"body"
                                                                },
                                                                {
                                                                    "type":"checkbox",
                                                                    "required":false,
                                                                    "title":"default",
                                                                    "field":"default"
                                                                }
                                                            ]
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                },
                                {
                                    "type":"div",
                                    "class":"mt-2 mb-2",
                                    "components":[                                
                                        {
                                            "type":"button",
                                            "action":"js:sfwcomponent.submit('frm-sfw-email-templates-add')",
                                            "title":"accept",
                                            "class":"btn btn-primary"
                                        },
                                        {
                                            "type":"button",
                                            "action":"link:sfw/email-templates",
                                            "title":"cancel",
                                            "class":"btn btn-secondary"
                                        }
                                    ]
                                }
                            ]                                        
                        }
                    ]
                }
            ]
        }   
    ]
}